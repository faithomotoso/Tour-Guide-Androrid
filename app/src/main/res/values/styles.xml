<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="info_textview" parent="TextAppearance.AppCompat.Menu">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--Styles based on category-->
    <style name="ResturantCategory" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary_restaurant</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_restaurant</item>
        <item name="colorAccent">@color/color_accent_restaurant</item>
    </style>

</resources>
